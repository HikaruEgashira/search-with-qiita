{
    "name": "search-with-qiita",
    "displayName": "search with qiita",
    "description": "qiita検索をvscode内で行うための拡張機能です。",
    "version": "0.2.0",
    "publisher": "ITFhikary",
    "categories": [
        "Other"
    ],
    "license": "SEE LICENSE IN LICENSE.txt",
    "icon": "images/icon.png",
    "activationEvents": [
        "onCommand:search-with-qiita.search"
    ],
    "contributes": {
        "commands": [
            {
                "command": "search-with-qiita.search",
                "title": "Qiita"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "editorHasSelection",
                    "command": "search-with-qiita.search",
                    "group": "navigation"
                }
            ]
        },
        "configuration": [
            {
                "title": "extension",
                "properties": {
                    "search-with-qiita.customDocs": {
                        "type": "object",
                        "default": {},
                        "description": "ex. {'ts':'typescript'}"
                    }
                }
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/HikaruEgashira/search-with-qiita.git"
    },
    "engines": {
        "vscode": "^1.5.0"
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^12.11.7",
        "@types/mocha": "^2.2.32"
    }
}
